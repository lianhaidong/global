#
# This is alternative for title string.
#
sub show {
	local($type, $lno, $file) = @_;
	local($msg) = '';

	if ($lno > 0) {
		if ($type eq 'R') {
			$msg .= 'Defined at';
		} elsif ($type eq 'Y') {
			$msg .= 'Used at';
		} else {
			$msg .= 'Refered from';
		}
		$msg .= ' ' . $lno;
		if ($file ne '') {
			$msg .= ' in ' . $file;
		}
	} else {
		$msg .= 'Multiple ';
		if ($type eq 'R') {
			$msg .= 'defined';
		} elsif ($type eq 'Y') {
			$msg .= 'used';
		} else {
			$msg .= 'refered';
		}
	}
	$msg .= '.';
	$msg;
}
